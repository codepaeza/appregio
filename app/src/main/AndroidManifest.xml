<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.paez.edwin.appregio">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logoregio"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".OpcionesmenuActivity"
            android:parentActivityName=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
        </activity>


        <activity
            android:name=".SolicitarActivity"
            android:parentActivityName=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
        </activity>

        <activity
            android:name=".AcercadeActivity"
            android:parentActivityName=".MainActivity"
            android:label="Acerca de..."
            android:theme="@style/AppTheme">
        </activity>

        <activity
            android:name=".MenuunoActivity"
            android:parentActivityName=".OpcionesmenuActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
        </activity>

        <activity
            android:name=".MenudosActivity"
            android:parentActivityName=".OpcionesmenuActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
        </activity>


    </application>

    <uses-permission android:name="android.permission.CALL_PHONE"/>

    <uses-permission android:name="android.permission.INTERNET"/>

</manifest>